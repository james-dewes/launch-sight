import pygame
from pygame.mixer import Sound
pygame.mixer.init()
soundfile = "launch_bass_boost_long.wav"
def setup():
    try:
        pygame.mixer.init()
        pygame.mixer.music.load(soundfile)
    except Exception:
        raise Exception("unable to set up")

def start():
    pygame.mixer.music.play()
    while pygame.mixer.music.get_busy() == True:
        continue    

